<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoOfParking"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:id="@+id/relative"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Information of Parking"
            android:textColor="@color/color2"
            android:textSize="30dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/color2"
            android:textSize="18dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_margin="10dp"
                android:textColor="@color/color2"
                android:textSize="18dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/image"
                app:riv_corner_radius="5dp"
                app:riv_mutate_background="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="3"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Number Of Parking : "
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/NumOfParking"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="3"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Price per hour : "
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/Price"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/color2"
                android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Location"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />





            <Button
                android:id="@+id/showMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:text="Location in Map"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/color2"
                android:textSize="18dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Description"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/color2"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/color2"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner Of Parking"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/color2"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/color2"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="2"
                android:paddingRight="10dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/Username"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="2"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Phone : "
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/Phone"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/color2"
                    android:textSize="18dp" />


            </LinearLayout>

            <Button
                android:id="@+id/Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Call"
                android:textSize="18dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ÙŒRating : "
                android:gravity="left"
                android:layout_margin="10dp"
                android:textColor="@color/color2"
                android:textSize="18dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AllRating"
                android:numStars="5"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_gravity="center"
                android:gravity="center"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView"/>


            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="7dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:text="Remove"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="7dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:text="Reverse"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>